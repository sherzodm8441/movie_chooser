                        <li>Rating: <%=detail[5]%>/10</li>
                        <li>Release Date: <%=detail[6]%></li>
                      </ul>
                      <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" id="button" data-toggle="modal" data-target=#<%=detail[1]%>>Play Trailer</button>
                      
                    </div>
                    <div class="description"><p><%=detail[4]%></p></div>
                  </div>
                </div>
                 
                
               
              </div>
              
              <!--  <div class="bg-modal">-->
                
