  <body>
    
    <div >
      <%if @type == "movie"%>
        
  <div>
        <%@hash.each do |movie,detail|%>
              <div class="box" style="background-image:url(<%=detail[2]%>);">
                <div class="overlay" >
                  <div >
                    <img class="resize" src="<%=detail[0]%>">
                    
                    <div class="info">
                      <ul class="writing" style="list-style-type:none;">
